@inherits BaseButtonComponent

<button class="btn btn@(IsOutline ? "-outline": "")-@Color"
        type="submit"
        disabled="@IsBusy"
        onclick="@OnClick"
        title="@TooltipStr">
    <span class="fa fa-@Icon"></span>
    
    @if (IsBusy)
    {
        <span class="spinner-border spinner-border-sm mr-1"></span>
    }
    
    @Caption
</button>